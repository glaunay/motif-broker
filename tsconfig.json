{
  "compilerOptions": {
      "allowJs" : true,
      "baseUrl": ".",
      "lib": [
          "dom",
          "es6",
          "es7",
          "es2017"
      ],
      "listEmittedFiles" : true,
      "listFiles" : false,
      "maxNodeModuleJsDepth" : 10,  
      "module": "commonjs",
      "moduleResolution" : "node",
      "outDir" : "./build/",
      "paths": {
          "*": [
              "node_modules/"
          ]
      },
      "preserveConstEnums" : true,
      "removeComments" : false,
      "target": "ES6",
      "esModuleInterop": true
  },
  "files": [ // path to the files to compile
      "./ts/src/index.ts"
  ],
  "exclude" : [  
   // "../taskobject"
  ]
}